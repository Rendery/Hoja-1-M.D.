#include <iostream>
#include <conio.h>

using namespace std;

int factorial(int n)
{
	if (n < 0) 
	{
		return 0;
	}
	else if (n > 1)
	{
		return n*factorial(n - 1); 
	}
	return 1;
}
int main()
{
	int num;
	cout << "ingrese el numero: "; cin >> num;
	
	cout << "El factorial del numero es: " << factorial(num);
	_getch();
}
