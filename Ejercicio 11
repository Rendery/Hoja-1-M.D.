#include <iostream>
#include <conio.h>

#define pi 3.141592

using namespace std;

double area(double radio)
{
	double ahre;
	ahre = pi*(radio * radio);
	return ahre;
}
int main()
{
	double radio;

	cout << "Ingrese el radio de la circunferencia: "; cin >> radio;
	
	cout << "El area de la circunferencia es de: " << area(radio);;
	_getch();
}
