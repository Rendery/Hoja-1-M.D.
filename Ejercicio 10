#include <iostream>
#include <conio.h>

#define pi 3.141595

using namespace std;

double area(double radio)
{
	double ahre;
	ahre = pi * (radio * radio);
	cout << "El area de la circunferencia es de: " << ahre;
	return 0;
}
int main()
{
	double radio;

	cout << "Ingrese el radio de la circunferencia: ";
	cin >> radio;
	area(radio);

	_getch();
}
