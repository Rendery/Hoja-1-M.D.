#include <iostream>
#include <conio.h>

using namespace std;

void Soles_dolares(double *dine)
{
	// 1sol = 0.30 dolares
	*dine = *dine * 0.30;
}
void Dolares_soles(double *dine)
{
	*dine = *dine / 0.30;
}
int main()
{
	double dinero;
	double *dine;
	dine = &dinero;
	cout << "Soles: "; cin >> dinero;

	Soles_dolares(dine);
	cout << "En Dolares " << dinero;
	cout << endl;
	Dolares_soles(dine);
	cout << "En Soles otra vez: " << dinero;
	_getch();
}
