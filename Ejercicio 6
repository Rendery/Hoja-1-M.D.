#include <iostream>
#include <conio.h>

using namespace std;

double Soles_dolares(double dine)
{
	double dola;
	dola = dine * 0.30;
	return dola;
}
double Dolares_soles(double dine)
{
	double sol;
	sol = dine / 0.30;
	return sol;
}
int main()
{
	double dine,nuevo;

	cout << "Soles: "; cin >> dine;
	cout << "En Dolares: " << Soles_dolares(dine) << endl;
	nuevo = Soles_dolares(dine);
	cout << "En Soles: " << Dolares_soles(nuevo);

	_getch();
}
